{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "tig",
	"patterns": [
		{
			"include": "#functions"
		},
		{
			"include": "#colors"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"functions": {
			"patterns": [
				{
					"name": "entry.functions.tig",
					"match": "\\b(set|bind)?\\s+((?:main|diff|log|tree|blob|blame|refs|status|stage|stash|pager|help)(?:-view|-options)?|ignore-case|line-graphics|generic)\\s+(.)\\s(.*)$",
					"captures": {
						"1": {
							"name": "entity.name.function.tig"
						},
						"2": {
							"name": "entity.name.type.tig"
						},
						"3": {
							"name": "entity.name.tag.tig"
						},
						"4": {
							"name": "entity.name.command.tig",
							"patterns": [
								{
									"name": "entity.name.function.shell.tig",
									"match": "(.*)",
									"captures": {
										"0": {
											"name": "entity.name.other.tig"
										}
									}
								}
							]
						}
					}
				}
			]
		},
		"colors": {
			"patterns": [
				{
					"name": "entry.fuctions.color.tig",
					"match": "\\b(color)\\s+(date|Author|cursor|Commit|diff-header)\\s+(.*)\\b",
					"captures": {
						"1": {
							"name": "entity.name.function.color.tig"
						},
						"2": {
							"name": "entity.name.type.color.tig"
						},
						"3": {
							"name": "entity.other.color.tig" 
						}
					}
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.tig",
					"begin": "(#)",
					"end": "\n"
				}
			]
		}
	},
	"scopeName": "source.tig"
}