{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "tig",
	"patterns": [
		{
			"include": "#functions"
		},
		{
			"include": "#colors"
		},
		{
			"include": "#sources"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"functions": {
			"patterns": [
				{
					"name": "entry.functions.tig",
					"match": "\\b(set|bind)?\\s+((?:main|diff|log|tree|blob|blame|refs|status|stage|stash|pager|help)(?:-view|-options)?|ignore-case|line-graphics|generic)\\s+(.)\\s(.*)$",
					"captures": {
						"1": {
							"name": "entity.name.function.tig"
						},
						"2": {
							"name": "entity.name.type.tig"
						},
						"3": {
							"name": "entity.name.tag.tig"
						},
						"4": {
							"name": "entity.name.action.tig",
							"patterns": [
								{
									"name": "entity.name.function.command.tig",
									"match": "(.*)$",
									"captures": {
										"0": {
											"name": "entity.name.other.tig"
										}
									}
								}
							]
						}
					}
				}
			]
		},
		"colors": {
			"patterns": [
				{
					"name": "entry.fuctions.color.tig",
					"match": "\\b(color)(.*)\\b",
					"captures": {
						"1": {
							"name": "entity.name.function.color.tig"
						},
						"2": {
							"patterns": [
								{
									"name": "entity.name.type.color.type.tig",
									"match": "\\s+(default|cursor|status|title-focus|title-blur|search-result|delimiter|header|line-number|id|date|author|mode|overflow|directory|file|file-size)(.*)",
									"captures": {
										"1": {
											"name": "entity.name.function.color.tig"
										},
										"2": {
											"patterns": [
												{
													"name": "entity.name.type.color.key-value.tig",
													"match": "\\s+(.*)\\s+(.*)$",
													"captures": {
														"1": {
															"name": "variable.color.key.tig" 
														},
														"2": {
															"name": "constant.character.color.value.tig"
														}
													}
												}
											]
										}
									}
								}
							]
						}
					}
				}
			]
		},
		"sources": {
			"patterns": [
				{
					"name": "entry.functions.source.tig",
					"match": "\\b(source)(.*)\\b",
					"captures": {
						"1": {
							"name": "entity.name.function.source.tig"
						},
						"2": {
							"patterns": [
								{
									"name": "entry.source.path.tig",
									"match": "\\s+(.*.tigrc)",
									"captures": {
										"1": {
											"name": "constant.character.source.path.tig"
										}
									}
								}
							]
						}
					}
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.tig",
					"begin": "(#)",
					"end": "\n"
				}
			]
		}
	},
	"scopeName": "source.tig"
}