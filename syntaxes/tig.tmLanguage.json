{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "tig",
	"patterns": [
		{
			"include": "#functions"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"functions": {
			"patterns": [
				{
					"name": "entry.functions.tig",
					"match": "\\b(set|bind|color)\\s+((main|diff|log|tree|blob|blame|refs|status|stage|stash|pager|help)(-view|-options)?|ignore-case|line-graphics|generic|diff-header|date|cursor|Author|Commit)\\s?\\b",
					"captures": {
						"0": {
							"name": "entity.name.function.tig"
						},
						"1": {
							"name": "entity.name.type.tig"
						}
					}
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.tig",
					"begin": "(#)",
					"end": "\n"
				}
			]
		}
	},
	"scopeName": "source.tig"
}